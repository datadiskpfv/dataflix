<header>
  <h1>Film Genres</h1>
</header>

<div id="genres">
  <table>
    <% @genres.each do |genre| %>
      <tr>
        <td><span class="genre"><%= genre.genre %></span></td>
        <td><%= link_to 'Edit Genre', [:edit, genre], class: 'edit', id: "edit_#{genre.genre}" %></td>
        <td>&nbsp</td>
        <td><%= link_to 'Delete Genre', genre, method: :delete, id: "delete_#{genre.genre}",
                  data: { confirm: 'Are you sure you want to delete this genre?' },
                  class: 'delete' %></td>
      </tr>
    <% end %>
  </table>
</div>