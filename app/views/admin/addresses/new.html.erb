<header>
  <h1>New Address</h1>
</header>

<%= render 'form', address: @address %>

<% if @address.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@address.errors.count, 'error') %>
      prohibited this address from being created: </h2>

    <ul>
      <% @address.errors.each do |attr,msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>