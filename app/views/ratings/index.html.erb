<header>
  <h1>Ratings</h1>
</header>

<div id="ratings">
  <% @ratings.each do |rating| %>
    <span class="rating"><%= rating.rating %></span>
    <%= link_to "Edit Rating", [:edit, rating], class: 'edit', id: "edit_#{rating.rating}" %>
    <%= link_to 'Delete Rating', rating, method: :delete, id: "delete_#{rating.rating}",
                  data: { confirm: 'Are you sure you want to delete this rating?' },
                  class: 'delete' %>
    <br>
  <% end %>
</div>