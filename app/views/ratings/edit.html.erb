<header>
  <h1>Edit Rating</h1>
</header>

<%= render 'form', rating: @rating %>

<% if @rating.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rating.errors.count, 'error') %>
        prohibited this film from being created: </h2>

      <ul>
        <% @rating.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>