<header>
  <h1><%= @film.title %></h1>
</header>

<div>
  <div class="col-md-3">
    <%= image_tag @film.image1, size: "250x350" %>
  </div>

  <div class="col-md-8 col-offset-4">
    <table id="attributes">
      <tr>
        <th>Description: </th>
        <td><%= @film.description %></td>
      </tr>
      <tr id="genre">
        <th>Genre: </th>
        <td><%= @film.genre1.genre %> / <%= @film.genre2.genre %></td>
      </tr>
      <tr id="rating">
        <th>Rating: </th>
        <td><%= image_tag "#{@film.rating}.png", size: "30x30" %></td>
      </tr>
      <tr id="release_year">
        <th>Release Year: </th>
        <td><%= @film.release_year %></td>
      </tr>
    </table>

    <div id="tasks">
      <div class="actions">
        <%= link_to 'Edit Film', edit_film_path, class: 'new' %>
        <%= link_to 'Delete Film', @film, method: :delete,
          data: { confirm: 'Are you sure you want to delete this film?' },
          class: 'delete' %>
      </div>
    </div>
  </div>
</div>