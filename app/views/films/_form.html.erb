<%= simple_form_for (@film) do |f| %>

  <%= f.input :title, input_html: { maxlength: 50 } %>
  <%= f.input :description, :as => :text, input_html: {rows: 5, maxlength: 200} %>
  <%= f.association :genre1, label: 'Genre1', prompt: "Choose a Genre" %>
  <%= f.association :genre2, label: 'Genre2', prompt: "Choose a Genre" %>
  <%= f.association :rating, prompt: "Choose a Rating" %>
  <%= f.input :release_year, label: 'Release Year', input_html: { maxlength: 4 } %>
  <%= f.input :blu_ray_stock, label: 'Blu-Ray Stock' %>
  <!-- the first argument will be the parameter id, the second argument is
  <!-- is the type -->
  <%= f.input :image1, as: :file, label: "Image 1" %>
  <%= f.input :image1_cache, as: :hidden %>

  <%= f.button :submit, { class: "btn-primary" } %>
<% end %>