<header>
  <h2>Film Rating</h2>
</header>

<%= @film.title %>

<%= simple_form_for(film_review_films_path) do |f| %>
    <div class="form-group row">
      <%= f.label :rating, class: 'col-sm-2 form-control-label' %>
      <div class="col-sm-3" id='star-rating'></div>
    </div>

    <div>
      <%= hidden_field_tag "film_id", @film.id %>
    </div>

    <div class="form-group row">
      <%= f.label :comments, class: 'col-sm-2 form-control-label' %>
      <div class="col-sm-6">
        <%= f.text_area :comments, name: 'comment' %>
        <div>
        </div>
        <br/>
        <div class="form-group row">
          <div class="col-sm-10">
            <%= f.submit 'Submit', class: 'btn btn-primary' %>
            <%= link_to "Back", root_path, class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
    </div>
<% end %>

<script>
    $('#star-rating').raty({
        path: '/assets',
        scoreName: 'rating',
        start: 0.0,
        showHalf: true
    });
</script>