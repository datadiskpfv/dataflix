<div>
  <div class="row">
    <div class="col-xs-6 charts">
      <h3>Genre 1 Data Chart</h3>
      Chart Data: <%= @chart_data %>
      <%= pie_chart @chart_data, width: "600px", height: "400px" %>
    </div>
    <div class="col-xs-6 charts">
      <h3>Genre 2 Data Chart</h3>
      Chart Data: <%= Film.active_t.joins(:genre2).group(:genre).count %>
      <%= pie_chart Film.active_t.joins(:genre2).group(:genre).count, width: "600px", height: "400px" %>
    </div>
    <div class="col-xs-6 charts">
      <h3>Genre 1 Data Chart</h3>
      Chart Data: <%= @chart_data %>
      <%= column_chart @chart_data %>
    </div>
    <div class="col-xs-6 charts">
      <h3>Genre 2 Data Chart</h3>
      Chart Data: <%= Film.active_t.joins(:genre2).group(:genre).count %>
      <%= column_chart Film.active_t.joins(:genre2).group(:genre).count %>
    </div>
    <div class="col-xs-6 charts">
      <h3>Films at home (blu-ray) top 10 Data Chart</h3>
      Chart Data: <%= Film.joins(:rental_lists).group(:title).where(rental_lists: {home: true, film_format: 'blu-ray'}).order('count(title) DESC').limit(10).count %>
      <%= column_chart Film.joins(:rental_lists).group(:title).where(rental_lists: {home: true, film_format: 'blu-ray'}).order('count(title) DESC').limit(10).count %>
    </div>
    <div class="col-xs-6 charts">
      <h3>Films at home (dvd) top 10 Data Chart</h3>
      Chart Data: <%= Film.joins(:rental_lists).group(:title).where(rental_lists: {home: true, film_format: 'dvd'}).order('count(title) DESC').limit(10).count %>
      <%= column_chart Film.joins(:rental_lists).group(:title).where(rental_lists: {home: true, film_format: 'dvd'}).order('count(title) DESC').limit(10).count %>
    </div>
    <div class="col-xs-6 charts">
      <h3>Films on rental list (blu-ray) top 10 Data Chart</h3>
      Chart Data: <%= Film.joins(:rental_lists).group(:title).where(rental_lists: {home: false, film_format: 'blu-ray'}).order('count(title) DESC').limit(10).count %>
      <%= column_chart Film.joins(:rental_lists).group(:title).where(rental_lists: {home: false, film_format: 'blu-ray'}).order('count(title) DESC').limit(10).count %>
    </div>
    <div class="col-xs-6 charts">
      <h3>Films on rental list (dvd) top 10 Data Chart</h3>
      Chart Data: <%= Film.joins(:rental_lists).group(:title).where(rental_lists: {home: false, film_format: 'dvd'}).order('count(title) DESC').limit(10).count %>
      <%= column_chart Film.joins(:rental_lists).group(:title).where(rental_lists: {home: false, film_format: 'dvd'}).order('count(title) DESC').limit(10).count %>
    </div>
  </div>
</div>