<header>
  <h2>barcode form</h2>
</header>

<div class="search-bar" style="width: 400px;">
  <%= form_tag barcode_find_films_path, :method => 'barcode_find', class: 'input-group'  do %>
      <%= text_field_tag :barcode, params[:barcode], class: 'form-control', placeholder: 'Search for film using barcode...' %>
      <span class="input-group-btn">
                  <%= button_tag( :class => "btn") do %>
                      <i class="glyphicon glyphicon-search"></i>
                  <% end %>
                </span>
  <% end %>
</div>